<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:id="@+id/single_deal_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/deal_photo"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"></View>

        <TextView
            android:id="@+id/deal_name"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textSize="16sp"
            android:textColor="@color/white_text"
            android:text="Super poniedziaÅ‚kowy deal" />

        <TextView
            android:id="@+id/deal_local_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="@color/white_text"
            android:text="Najlepszy lokal" />

        <TextView
            android:id="@+id/deal_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/white_text"
            android:drawableLeft="@drawable/ic_near_me"
            android:drawablePadding="1dp"
            android:text="500m" />

        <TextView
            android:id="@+id/deal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="25sp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/price"
            android:text="-50%" />


    </RelativeLayout>



</android.support.v7.widget.CardView>